<div class="container">
    <div id="headerBox">
        <h2>Let's Get Scrapin'!</h2>
    </div>

    <div class="row">
        {{!-- if no articles are scraped display this div showing button to scrape and a message --}}
        <div class="col s12" id="defaultDisplay">
            <h4>Oops looks like you don't have anything to read!</h4>
            <p>To fix that, click the Scrape button to get started</p>
            <a class="waves-effect waves-light btn">Scrape</a>
        </div>
        {{!-- else display the scraped articles, each in its own div --}}
        <div class="col s12" id="articlesDisplay">
            {{!-- headline --}}
            {{!-- summary --}}
            {{!-- link --}}
            {{!-- expand section to add a comment and show prev comments (with delete option) --}}
            <ul class="collapsible">
                <li>
                    <div class="collapsible-header">Comments</div>
                    <div class="collapsible-body">
                        {{!-- place to add a new comment --}}
                        <div class="row">
                            <form class="col s10">
                                <div class="row">
                                    <div class="input-field col s10">
                                        <textarea id="newComment" class="materialize-textarea"></textarea>
                                        <label for="newComment">Add a Comment</label>
                                    </div>
                                    <div class="col s2">
                                        <a class="waves-effect waves-light btn">Add Comment</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        {{!-- shows all comments added to the article plus a delete button, 
                            use #each to loop through each comment in db and display --}}
                        <div class="row">
                            <div class="col s8">
                                <p class="commentDetail">This is a test comment added to an article</p>
                            </div>
                            <div class="col s2">
                                <a class="waves-effect waves-light btn">Delete</a>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>